extends ../layout.pug

block content
	.my-5.mx-auto.shadow.p-3(style='max-width: 600px')
		form(action='' method='POST')
			h3.lead Welcome back

			include ../includes/errors.pug
			
			.form-group.mb-2
				label(for='email') Email address
				input#email.form-control(
					type='email' name="email"
					value=body.email || null
				)
			.form-group.mb-2
				label(for='password') Password
				input#password.form-control(type='password' name="password")
			button.btn.btn-primary.mt-3.px-4(type='submit') Login
			p.my-3
				| Need an account? 
				a(href=pages.auth.signup) Signup
